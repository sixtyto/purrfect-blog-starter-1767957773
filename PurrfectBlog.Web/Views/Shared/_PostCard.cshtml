@model PurrfectBlog.Web.ViewModels.PostSummaryViewModel

<div class="card h-100 shadow">
    <div class="card-body d-flex flex-column" style="min-width:0">
        <h3 class="h5 card-title fw-bold mb-2 text-truncate">
            <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-dark">
                @Model.Title
            </a>
        </h3>

        @if (!string.IsNullOrEmpty(Model.Category))
        {
            <div class="mb-2">
                <span class="badge bg-info text-dark d-inline-block text-truncate" style="max-width:100%" title="@Model.Category">
                    @Model.Category
                </span>
            </div>
        }

        <p class="card-text text-muted small mb-3">
            Posted on @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy")
            @if (Model.UpdatedAt.HasValue)
            {
            <span class="ms-1 small">(Updated: @Model.UpdatedAt.Value.ToLocalTime().ToString("dd.MM.yyyy HH:mm"))</span>
            }
        </p>

        <p class="card-text flex-grow-1">
            @Model.Excerpt
        </p>

        <div class="mt-3">
            <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm w-100 shadow-sm">
                Read More &rarr;
            </a>
        </div>
    </div>
</div>
