@model PurrfectBlog.Web.ViewModels.EditPostViewModel

@{
ViewData["Title"] = "Edit Post";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1 class="fw-bold mb-4">Edit Post ‚úèÔ∏è</h1>
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label fw-bold"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter a catchy title..."
                               maxlength="100"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Category" class="form-label fw-bold"></label>
                        <input asp-for="Category" class="form-control" placeholder="e.g. Lifestyle, Tech, Cats"
                               maxlength="50"/>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Content" class="form-label fw-bold"></label>
                        <textarea asp-for="Content" class="form-control" rows="10" placeholder="Share your thoughts..."
                                  maxlength="10000"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg text-white">Update Post üíæ</button>
                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id"
                           class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
